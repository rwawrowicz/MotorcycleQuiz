<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <!-- Image source: CC BY-SA 3.0, https://commons.wikimedia.org/w/index.php?curid=293414 -->
    <ImageView
        android:id="@+id/image_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dakar"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question_3"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:textSize="14sp"/>

    <RadioGroup
        android:id="@+id/radio_group_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_3_1"/>

        <RadioButton
            android:id="@+id/radio_button_3_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_3_2"/>

        <RadioButton
            android:id="@+id/radio_button_3_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_3_3"
            android:layout_marginBottom="24dp"/>

    </RadioGroup>

</LinearLayout>
